{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "data": {
    "url": "https://raw.githubusercontent.com/2311ajay/FIT3179-Vega-Lite/main/vegaLiteJsonScripts/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  }, 
  "width": "container",
  "height": 650,
  "title": {"text":"Overall happiness of the world", "fontSize":16},
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Western Europe",
          "Central and Eastern Europe",
          "East Asia",
          "South Asia",
          "Southeast Asia",
          "Latin America and Caribbean",
          "North America and ANZ",
          "Commonwealth of Independent States",
          "Middle East and North Africa",
          "Sub-Saharan Africa"
        ],
        "labels": ["Show All", "Western Europe"],
        "name": "Region Selection:"
      }
    },
    {
      "name": "zoom_level",
      "value": 190,
      "bind": {
        "input": "range",
        "min": 190,
        "max": 1000,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [0, 50],
          [15, 50],
          [120, 30],
          [80, 25],
          [110, 5],
          [-70, -10],
          [-110, 50],
          [20, 10],
          [-70, -20],
          [145, -25]
        ],
        "labels": [
          "Reset",
          "Western Europe",
          "Central and Eastern Europe",
          "East Asia",
          "South Asia",
          "Southeast Asia",
          "Latin America and Caribbean",
          "North America",
          "Africa",
          "South America",
          "ANZ"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/2311ajay/FIT3179-Vega-Lite/main/vegaLiteJsonScripts/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape"}, 
      "projection":{
          "type": "equirectangular",
          "center": {"expr": "center_to"},
          "scale": {"expr": "zoom_level"}
        }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/2311ajay/FIT3179-Vega-Lite/main/vegaLiteJsonScripts/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],      
      "projection":{
        "type": "equirectangular",
        "center": {"expr": "center_to"},
        "scale": {"expr": "zoom_level"}
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/2311ajay/FIT3179-Vega-Lite/main/data/world-happiness-report-compiled.csv"
            },
            "key": "Country",
            "fields": ["Ladder_score", "Regional indicator"]
          }
        }
        ,
        {
          "filter": "Region_selection == null || datum['Regional indicator'] == Region_selection"
        }
      ],
      "layer": [
        {
          "mark": {"type": "geoshape", "stroke":"aliceblue", "strokeWidth": 0.8},
          "encoding": {
            "color": {
              "field": "Ladder_score",
              "type": "quantitative",
              "scale": {"scheme": "redyellowgreen"},
              "title": "Happiness Score"
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Regional indicator",
                "type": "nominal",
                "title": "Region"
              },
              {
                "field": "Ladder_score",
                "type": "quantitative",
                "title": "Happiness Score",
                "format": ".2f"
              }
            ]
          }
        }
      ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/2311ajay/FIT3179-Week-8/main/vegaLiteJsonScripts/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "stroke":"aliceblue", "strokeWidth": 0.8},
      "projection":{
        "type": "equirectangular",
        "center": {"expr": "center_to"},
        "scale": {"expr": "zoom_level"}
      }
    }
  ]
}